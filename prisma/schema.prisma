generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
}

enum UserRole {
  CLIENT
  ADMIN
}

model User {
  id        String   @id @default(cuid())
  nom       String
  prenom    String
  adresse   String
  email     String   @unique
  password  String
  phone     String?
  role      UserRole @default(CLIENT)
  language  String   @default("fr") // Langue de préférence de l'utilisateur (fr, en)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}
